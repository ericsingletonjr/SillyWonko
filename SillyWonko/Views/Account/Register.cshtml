@model SillyWonko.Models.ViewModels.UserViewModel

<main class="main_container">
    <header>
        <img id="main_logo" src="~/images/wonko_logo.svg" alt="Wonko Logo" />
    </header>
	<div class="form_container">
		<p id="form_title">Registratious?</p>
		<form method="post" asp-action="Register">
			<div asp-validation-summary="All"></div>

			<p><input type="text" asp-for="@Model.Register.FirstName" placeholder="First Name" /></p>
			<p><input type="text" asp-for="@Model.Register.LastName" placeholder="Last Name" /></p>
			<p><input type="text" asp-for="@Model.Register.Email" placeholder="Email" /></p>
			<p><input type="password" asp-for="@Model.Register.Password" placeholder="Password" /></p>
			<p><input type="password" asp-for="@Model.Register.ConfirmPassword" placeholder="Re-enter Password" /></p>
			<p><input type="submit" value="Confirmatious?" /></p>
		</form>
	</div>
</main>
