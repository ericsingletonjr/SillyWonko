@model SillyWonko.Models.ViewModels.UserViewModel

<main class="main_container">
    <header>
        <img id="main_logo" src="~/images/wonko_logo.svg" alt="Wonko Logo" />
    </header>
    <div class="inventory_list">
        <section id="list_wrapper">
            <p id="detail_name">Order Confirmation</p>
            <p>Order Number: @Model.Order.ID</p>
            @foreach (var product in Model.Cart.CartItems)
            {
                <p>@product.Product.Name QTY:@product.Quantity Price:@product.Product.Price</p>
            }
            <hr />
            <div>
                <form method="post" asp-controller="Cart" asp-action="Complete">
                    <p>Total: @Model.Order.TotalPrice</p>
                    <label asp-for="@Model.User.FirstName">First Name</label>
                    <input type="text" asp-for="@Model.User.FirstName" />
                    <br />
                    <label asp-for="@Model.User.LastName">Last Name</label>
                    <input type="text" asp-for="@Model.User.LastName" />
                    <br />
                    <label asp-for="@Model.Shipping.Address1">Address 1</label>
                    <input type="text" asp-for="@Model.Shipping.Address1" />
                    <br />
                    <label asp-for="@Model.Shipping.Address2">Address 2</label>
                    <input type="text" asp-for="@Model.Shipping.Address2" />
                    <br />
                    <label asp-for="@Model.Shipping.City">City</label>
                    <input type="text" asp-for="@Model.Shipping.City"/>
                    <br />
                    <label asp-for="@Model.Shipping.State">State</label>
                    <input type="text" asp-for="@Model.Shipping.State"/>
                    <br />
                    @*<label>Zip</label>
                    <input type="text" />
                    <br />*@
                    <input type="hidden" asp-for="@Model.Order.ID" />
                    <input id="confirm_button" type="submit" value="Complete" />
                </form>
            </div>
        </section>
    </div>
</main>
